<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AquaForecast" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.AquaForecast.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <!-- Set the splash screen icon -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <!-- Set icon background to white to preserve the circular border -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <!-- Set animation duration -->
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <!-- Set the theme to use after splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.AquaForecast</item>
    </style>
</resources>